@model IEnumerable<RedeSocialBLL.Models.Postagem>

@{
    ViewData["Title"] = "Index";
}

@if (User.Identity.Name != null)
{
<p>
    <a asp-action="Create">Create New</a>
</p>
}

<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.EmailUsuario)</strong>
                    <br />
                    <img src="@item.URLImagem" style="max-width:350px; height:auto" />
                    <br />
                    @Html.DisplayFor(modelItem => item.Mensagem)
                    <br />
                    @Html.DisplayFor(modelItem => item.HoraPostagem)
                    @if (item.EmailUsuario == User.Identity.Name)
                    {
                        <span>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
